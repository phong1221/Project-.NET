@page "/user"
@inject IProductService ProductService
@inject ICustomerService CustomerService
@inject ICategoryService CategoryService
@inject CartService CartService
@inject CustomerAuthService AuthService
@inject NavigationManager Nav
@inject IJSRuntime JSRuntime

@using StoreManagement.Data.Entities

<div class="container animate__animated animate__fadeIn">
    <div class="text-center mb-5">
        <h2 class="fw-bold text-primary">Mua sắm trực tuyến</h2>
        <p class="text-muted">Khám phá các sản phẩm chất lượng tốt nhất với giá cả phải chăng</p>
    </div>

    <!-- Search & Filter Section -->
    <div class="card shadow-sm border-0 mb-4 rounded-3">
        <div class="card-body bg-white">
            <div class="row g-3">
                <div class="col-md-4">
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0"><i class="fas fa-search text-muted"></i></span>
                        <input type="text" class="form-control border-start-0 ps-0" placeholder="Tìm kiếm sản phẩm..." @bind="keyword" @bind:event="oninput" @onkeyup="HandleSearch" />
                    </div>
                </div>
                 <div class="col-md-3">
                     <select class="form-select" @bind="categoryId">
                        <option value="">-- Tất cả danh mục --</option>
                        @if (categories != null)
                        {
                            foreach (var c in categories)
                            {
                                <option value="@c.CategoryId">@c.CategoryName</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-2">
                     <div class="input-group">
                        <span class="input-group-text bg-white">₫</span>
                        <input type="number" class="form-control" placeholder="Min" @bind="minPrice" />
                    </div>
                </div>
                <div class="col-md-2">
                     <div class="input-group">
                        <span class="input-group-text bg-white">₫</span>
                        <input type="number" class="form-control" placeholder="Max" @bind="maxPrice" />
                    </div>
                </div>
                 <div class="col-md-1">
                    <button class="btn btn-primary w-100" @onclick="HandleSearch" title="Lọc"><i class="fas fa-filter"></i></button>
                </div>
            </div>
        </div>
    </div>

    <!-- Products Grid -->
    <div class="row row-cols-2 row-cols-md-3 row-cols-lg-4 g-4">
        @if (products == null)
        {
             <div class="col-12 text-center py-5">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        }
        else if (!pagedProducts.Any())
        {
            <div class="col-12 text-center py-5">
                <img src="https://cdni.iconscout.com/illustration/premium/thumb/empty-state-2130362-1800926.png" alt="Empty" style="max-width: 200px; opacity: 0.8" />
                <p class="text-muted mt-3">Không tìm thấy sản phẩm nào phù hợp.</p>
            </div>
        }
        else
        {
            @foreach (var p in pagedProducts)
            {
                <div class="col animate__animated animate__zoomIn">
                    <div class="card h-100 shadow-sm border-0 product-card rounded-3 overflow-hidden">
                        <div class="position-relative product-img-container bg-light d-flex align-items-center justify-content-center" style="height: 180px;">
                             <!-- Placeholder Icon -->
                             <i class="fas fa-box-open fa-4x text-muted opacity-50"></i>
                             <div class="product-overlay d-flex justify-content-center align-items-center">
                                 <button class="btn btn-light rounded-circle shadow-sm me-2" @onclick="() => NavigateToDetails(p.ProductId)" title="Xem chi tiết"><i class="fas fa-eye"></i></button>
                                 <button class="btn btn-primary rounded-circle shadow-sm" @onclick="() => AddToCart(p)" title="Thêm vào giỏ"><i class="fas fa-cart-plus"></i></button>
                             </div>
                        </div>
                        <div class="card-body p-3 text-center">
                            <h6 class="card-title text-truncate fw-bold mb-1" title="@p.ProductName">@p.ProductName</h6>
                             <div class="d-flex justify-content-center align-items-center mb-2">
                                 <span class="text-warning small me-1"><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star-half-alt"></i></span>
                                 <span class="text-muted small">(4.5)</span>
                             </div>
                            <h5 class="text-danger fw-bold mb-0">@p.Price.ToString("N0") ₫</h5>
                            <small class="text-muted">/@p.Unit</small>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
    
    <!-- Pagination -->
    @if (totalPages > 1)
    {
        <div class="d-flex justify-content-center mt-5">
            <nav aria-label="Page navigation">
                <ul class="pagination shadow-sm">
                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                        <button class="page-link border-0" @onclick="() => ChangePage(currentPage - 1)" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </button>
                    </li>
                    @for (int i = 1; i <= totalPages; i++)
                    {
                        var pageIndex = i;
                        <li class="page-item @(currentPage == pageIndex ? "active" : "")">
                            <button class="page-link border-0" @onclick="() => ChangePage(pageIndex)">@i</button>
                        </li>
                    }
                    <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                        <button class="page-link border-0" @onclick="() => ChangePage(currentPage + 1)" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </button>
                    </li>
                </ul>
            </nav>
        </div>
    }
</div>

<style>
    .product-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .product-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(0,0,0,0.1) !important;
    }
    .product-img-container {
        overflow: hidden;
    }
    .product-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0,0,0,0.1);
        opacity: 0;
        transition: opacity 0.3s ease;
    }
    .product-card:hover .product-overlay {
        opacity: 1;
    }
    .product-card .btn {
        transform: translateY(20px);
        transition: transform 0.3s ease;
    }
    .product-card:hover .btn {
        transform: translateY(0);
    }
    .pagination .page-item.active .page-link {
        background-color: #0d6efd;
        border-color: #0d6efd;
    }
    .pagination .page-link {
        color: #333;
        margin: 0 3px;
        border-radius: 5px;
    }
    .pagination .page-link:hover {
        background-color: #e9ecef;
        color: #0d6efd;
    }
</style>

@code {
    private IEnumerable<Product> products; // All loaded filtered products
    private IEnumerable<Product> pagedProducts = new List<Product>();
    private IEnumerable<Category> categories;
    
    // Search Filters
    string keyword = "";
    int? categoryId;
    decimal? minPrice;
    decimal? maxPrice;

    // Pagination
    int currentPage = 1;
    int pageSize = 8; // Gọn gàng hơn
    int totalPages = 0;

    protected override async Task OnInitializedAsync()
    {
        categories = await CategoryService.GetAllCategoriesAsync();
        await LoadData();
    }

    async Task LoadData()
    {
        // Use search API which supports category filtering
        products = await ProductService.SearchProductsAsync(keyword, minPrice, maxPrice, categoryId);
        
        // Calculate pagination
        totalPages = (int)Math.Ceiling((double)products.Count() / pageSize);
        // Correct page if out of bounds
        if (currentPage > totalPages && totalPages > 0) currentPage = totalPages;
        if (currentPage < 1) currentPage = 1;
        
        UpdatePagedData();
    }

    void UpdatePagedData()
    {
        if (products != null)
        {
            pagedProducts = products.Skip((currentPage - 1) * pageSize).Take(pageSize).ToList();
        }
    }

    async Task HandleSearch()
    {
        currentPage = 1; // Reset to page 1 on search
        await LoadData();
    }

    void ChangePage(int newPage)
    {
        if (newPage >= 1 && newPage <= totalPages)
        {
            currentPage = newPage;
            UpdatePagedData();
        }
    }

    async Task AddToCart(Product p)
    {
        if (!AuthService.IsLoggedIn)
        {
            await JSRuntime.InvokeVoidAsync("ShowToast", "error", "Vui lòng đăng nhập để mua hàng!");
            // Optional: Redirect to login
            // Nav.NavigateTo("/user/login"); 
            return;
        }

        await CartService.AddToCartAsync(p);
        await JSRuntime.InvokeVoidAsync("ShowToast", "success", $"Đã thêm {p.ProductName} vào giỏ");
    }

    void NavigateToDetails(int id)
    {
        Nav.NavigateTo($"/user/product/{id}");
    }
}
