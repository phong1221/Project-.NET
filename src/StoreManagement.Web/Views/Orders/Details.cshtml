@model StoreManagement.Data.Entities.Order

@{
    ViewData["Title"] = "Chi tiết hóa đơn";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0 text-gray-800">Chi tiết hóa đơn #@Model.OrderId</h1>
    <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Thông tin chung</h6>
            </div>
            <div class="card-body">
                <p><strong>Ngày tạo:</strong> @Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</p>
                <p><strong>Khách hàng:</strong> @(Model.Customer?.Name ?? "Khách lẻ")</p>
                <p><strong>Nhân viên:</strong> @(Model.User?.Username ?? "N/A")</p>
                <p><strong>Trạng thái:</strong> 
                    @if(Model.Status == "paid") {
                        <span class="badge bg-success">Đã thanh toán</span>
                    } else if(Model.Status == "pending") {
                        <span class="badge bg-warning text-dark">Chờ xử lý</span>
                    } else {
                        <span class="badge bg-secondary">@Model.Status</span>
                    }
                </p>

                @if(Model.Status == "pending")
                {
                    <hr/>
                    <form asp-action="Confirm" asp-route-id="@Model.OrderId" method="post" id="confirm-form-@Model.OrderId">
                        <button type="button" class="btn btn-success w-100" onclick="confirmOrder(@Model.OrderId)">
                            <i class="fas fa-check-circle me-2"></i> Xác nhận & Thanh toán
                        </button>
                    </form>
                }
            </div>
        </div>
    </div>
    
    <div class="col-md-8">
        <div class="card shadow mb-4">
             <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Danh sách sản phẩm</h6>
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Sản phẩm</th>
                            <th>Đơn giá</th>
                            <th>Số lượng</th>
                            <th>Thành tiền</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model.OrderItems)
                        {
                            <tr>
                                <td>@item.Product?.ProductName</td>
                                <td>@item.Price.ToString("N0")</td>
                                <td>@item.Quantity</td>
                                <td>@item.Subtotal.ToString("N0")</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                         @if(Model.DiscountAmount > 0)
                        {
                             <tr>
                                <td colspan="3" class="text-end fw-bold">Giảm giá:</td>
                                <td class="text-danger fw-bold">-@Model.DiscountAmount?.ToString("N0") ₫</td>
                            </tr>
                        }
                        <tr>
                            <td colspan="3" class="text-end fw-bold h5">TỔNG CỘNG:</td>
                            <td class="text-danger fw-bold h5">@Model.TotalAmount?.ToString("N0") ₫</td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmOrder(id) {
            Swal.fire({
                title: 'Xác nhận đơn hàng?',
                text: "Bạn có chắc chắn muốn xác nhận và thanh toán cho đơn hàng này?",
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#198754',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Đồng ý',
                cancelButtonText: 'Hủy bỏ'
            }).then((result) => {
                if (result.isConfirmed) {
                    document.getElementById('confirm-form-' + id).submit();
                }
            })
        }
    </script>
}
