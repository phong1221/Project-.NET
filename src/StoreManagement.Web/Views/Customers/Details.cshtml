@model StoreManagement.Data.Entities.Customer

@{
    ViewData["Title"] = "Chi tiết khách hàng";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0 text-gray-800">Chi tiết khách hàng</h1>
    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Quay lại</a>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Thông tin: @Model.Name</h6>
    </div>
    <div class="card-body">
         <dl class="row">
            <dt class="col-sm-3">Họ và tên</dt>
            <dd class="col-sm-9 fw-bold">@Model.Name</dd>

            <dt class="col-sm-3">Số điện thoại</dt>
            <dd class="col-sm-9">@(Model.Phone ?? "Chưa cập nhật")</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@(Model.Email ?? "Chưa cập nhật")</dd>

            <dt class="col-sm-3">Địa chỉ</dt>
            <dd class="col-sm-9">@(Model.Address ?? "Chưa cập nhật")</dd>

            <dt class="col-sm-3">Ngày tạo</dt>
            <dd class="col-sm-9">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</dd>
        </dl>
        
        <div class="mt-4 border-top pt-3">
             <a asp-action="Edit" asp-route-id="@Model.CustomerId" class="btn btn-warning"><i class="fas fa-edit"></i> Chỉnh sửa</a>
             <button type="button" class="btn btn-danger" onclick="confirmDelete(@Model.CustomerId)"><i class="fas fa-trash"></i> Xóa</button>
        </div>
    </div>
</div>

<form id="delete-form-@Model.CustomerId" asp-action="Delete" asp-route-id="@Model.CustomerId" method="post" style="display:none">
    @Html.AntiForgeryToken()
</form>

@section Scripts {
    <script>
        function confirmDelete(id) {
            if (confirm('Bạn có chắc chắn muốn xóa khách hàng này không?')) {
                document.getElementById('delete-form-' + id).submit();
            }
        }
    </script>
}
