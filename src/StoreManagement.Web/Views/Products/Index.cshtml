@model StoreManagement.Web.Helpers.PaginatedList<StoreManagement.Data.Entities.Product>
@{ ViewData["Title"] = "Danh sách sản phẩm"; }

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0 text-gray-800">Quản lý Sản phẩm</h1>
    <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> Thêm mới</a>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <form asp-action="Index" method="get" class="row g-3 align-items-end">
             <div class="col-md-3">
                 <label class="form-label">Tên bộ lọc</label>
                <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="Tên sp/barcode..." />
            </div>
             <div class="col-md-3">
                 <label class="form-label">Danh mục</label>
                 <select name="categoryId" class="form-select" asp-items="@(new SelectList(ViewBag.Categories, "CategoryId", "CategoryName", ViewData["CurrentCategory"]))">
                    <option value="">-- Tất cả --</option>
                </select>
            </div>
             <div class="col-md-2">
                 <label class="form-label">Giá từ</label>
                <input type="number" name="minPrice" value="@ViewData["CurrentMinPrice"]" class="form-control" />
            </div>
            <div class="col-md-2">
                <label class="form-label">Đến</label>
                <input type="number" name="maxPrice" value="@ViewData["CurrentMaxPrice"]" class="form-control" />
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-secondary w-100">Tìm kiếm</button>
            </div>
        </form>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-striped" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Tên SP</th>
                        <th>Danh mục</th>
                        <th>Giá</th>
                        <th>Đơn vị</th>
                        <th>Nhà cung cấp</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <div class="fw-bold">@item.ProductName</div>
                                <small class="text-muted">@item.Barcode</small>
                            </td>
                            <td>@(item.Category?.CategoryName ?? "-")</td>
                            <td class="text-danger fw-bold">@item.Price.ToString("N0")</td>
                            <td>@item.Unit</td>
                            <td>@(item.Supplier?.Name ?? "-")</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.ProductId" class="btn btn-sm btn-info text-white" title="Chi tiết"><i class="fas fa-eye"></i></a>
                                <a asp-action="Edit" asp-route-id="@item.ProductId" class="btn btn-sm btn-warning text-white" title="Sửa"><i class="fas fa-edit"></i></a>
                                <button type="button" class="btn btn-sm btn-danger" onclick="confirmDelete(@item.ProductId)" title="Xóa"><i class="fas fa-trash"></i></button>
                                
                                <form id="delete-form-@item.ProductId" asp-action="Delete" asp-route-id="@item.ProductId" method="post" style="display:none">
                                    @Html.AntiForgeryToken()
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
         <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                    <a class="page-link" asp-action="Index"
                       asp-route-pageNumber="@(Model.PageIndex - 1)"
                       asp-route-searchString="@ViewData["CurrentFilter"]"
                       asp-route-categoryId="@ViewData["CurrentCategory"]"
                       asp-route-minPrice="@ViewData["CurrentMinPrice"]"
                       asp-route-maxPrice="@ViewData["CurrentMaxPrice"]">Trước</a>
                </li>
                <li class="page-item disabled"><span class="page-link">Trang @Model.PageIndex / @Model.TotalPages</span></li>
                <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                    <a class="page-link" asp-action="Index"
                       asp-route-pageNumber="@(Model.PageIndex + 1)"
                       asp-route-searchString="@ViewData["CurrentFilter"]"
                       asp-route-categoryId="@ViewData["CurrentCategory"]"
                       asp-route-minPrice="@ViewData["CurrentMinPrice"]"
                       asp-route-maxPrice="@ViewData["CurrentMaxPrice"]">Sau</a>
                </li>
            </ul>
        </nav>
    </div>
</div>
