@model StoreManagement.Data.Entities.Product
@{ ViewData["Title"] = "Thêm sản phẩm"; }

<h2 class="mb-4">Thêm sản phẩm mới</h2>

<div class="card shadow">
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-6 mb-3">
                     <label asp-for="ProductName" class="form-label">Tên sản phẩm</label>
                    <input asp-for="ProductName" class="form-control" />
                     <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>
                 <div class="col-md-6 mb-3">
                     <label asp-for="Barcode" class="form-label">Mã vạch</label>
                    <input asp-for="Barcode" class="form-control" />
                     <span asp-validation-for="Barcode" class="text-danger"></span>
                </div>
            </div>
            
             <div class="row">
                <div class="col-md-4 mb-3">
                     <label asp-for="CategoryId" class="form-label">Danh mục</label>
                    <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryId"></select>
                </div>
                 <div class="col-md-4 mb-3">
                     <label asp-for="SupplierId" class="form-label">Nhà cung cấp</label>
                    <select asp-for="SupplierId" class="form-select" asp-items="ViewBag.SupplierId"></select>
                </div>
                 <div class="col-md-4 mb-3">
                    <label asp-for="Unit" class="form-label">Đơn vị tính</label>
                    <input asp-for="Unit" class="form-control" />
                </div>
            </div>

             <div class="mb-3">
                <label asp-for="Price" class="form-label">Giá bán</label>
                <input asp-for="Price" type="number" class="form-control" />
            </div>

            <button type="submit" class="btn btn-primary">Lưu lại</button>
            <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
        </form>
    </div>
</div>
