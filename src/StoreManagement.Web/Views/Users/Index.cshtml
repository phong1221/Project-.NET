@model StoreManagement.Web.Helpers.PaginatedList<StoreManagement.Data.Entities.User>
@{ ViewData["Title"] = "Quản lý Tài khoản"; }

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0 text-gray-800">Quản lý Tài khoản</h1>
    <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> Thêm mới</a>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <form asp-action="Index" method="get" class="row g-3">
             <div class="col-auto">
                <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="Tên NV..." />
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-secondary">Tìm</button>
            </div>
        </form>
    </div>
    <div class="card-body">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Username</th>
                    <th>Họ tên</th>
                    <th>Vai trò</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Username</td>
                        <td>@item.FullName</td>
                        <td>
                             @if(item.Role == "admin") {
                                <span class="badge bg-danger">Admin</span>
                            } else if(item.Role == "staff") {
                                <span class="badge bg-info">Staff</span>
                            } else {
                                <span class="badge bg-secondary">Customer</span>
                            }
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.UserId" class="btn btn-sm btn-info text-white" title="Sửa"><i class="fas fa-edit"></i></a>
                            
                            @if (User.Identity.Name != item.Username) // Prevent self-delete
                            {
                                <button type="button" class="btn btn-sm btn-danger" onclick="confirmDelete(@item.UserId)" title="Xóa"><i class="fas fa-trash"></i></button>
                                <form id="delete-form-@item.UserId" asp-action="Delete" asp-route-id="@item.UserId" method="post" style="display:none">
                                    @Html.AntiForgeryToken()
                                </form>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
         <!-- Pagination -->
        <nav aria-label="Page navigation" class="mt-3">
            <ul class="pagination justify-content-center">
                <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                    <a class="page-link" asp-action="Index"
                       asp-route-pageNumber="@(Model.PageIndex - 1)"
                       asp-route-searchString="@ViewData["CurrentFilter"]">Trước</a>
                </li>
                <li class="page-item disabled"><span class="page-link">Trang @Model.PageIndex / @Model.TotalPages</span></li>
                <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                    <a class="page-link" asp-action="Index"
                       asp-route-pageNumber="@(Model.PageIndex + 1)"
                       asp-route-searchString="@ViewData["CurrentFilter"]">Sau</a>
                </li>
            </ul>
        </nav>
    </div>
</div>
