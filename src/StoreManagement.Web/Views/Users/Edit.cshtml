@model StoreManagement.Data.Entities.User
@{ ViewData["Title"] = "Sửa tài khoản"; }

<h2>Sửa thông tin tài khoản</h2>
<div class="card shadow">
    <div class="card-body">
        <form asp-action="Edit">
            <input type="hidden" asp-for="UserId" />
             <!-- Password not included here to avoid blanking it out, usually handle password reset separately or optional -->
            <input type="hidden" asp-for="Password" /> 
            
            <div class="mb-3">
                <label asp-for="Username" class="form-label">Tên đăng nhập</label>
                <input asp-for="Username" class="form-control" readonly />
            </div>
             <div class="mb-3">
                <label asp-for="FullName" class="form-label">Họ tên</label>
                <input asp-for="FullName" class="form-control" />
            </div>
             <div class="mb-3">
                <label asp-for="Role" class="form-label">Vai trò</label>
                <select asp-for="Role" class="form-select">
                    <option value="staff">Staff (Nhân viên)</option>
                    <option value="admin">Admin (Quản trị)</option>
                    <option value="customer">Customer (Khách hàng)</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
            <a asp-action="Index" class="btn btn-secondary">Hủy</a>
        </form>
    </div>
</div>
