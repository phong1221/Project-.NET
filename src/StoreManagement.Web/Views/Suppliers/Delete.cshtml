@model StoreManagement.Data.Entities.Supplier
@{ ViewData["Title"] = "Xóa nhà cung cấp"; }

<h2>Xóa nhà cung cấp</h2>
<div class="alert alert-danger">
    <h4>Bạn có chắc chắn muốn xóa nhà cung cấp này?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Tên:</dt>
        <dd class="col-sm-9">@Model.Name</dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="SupplierId" />
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>
