@model StoreManagement.Web.Helpers.PaginatedList<StoreManagement.Data.Entities.Inventory>
@{ ViewData["Title"] = "Kho hàng"; }

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0 text-gray-800">Quản lý Kho hàng</h1>
    <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> Nhập kho</a>
</div>

<div class="card shadow mb-4">
     <div class="card-header py-3">
        <form asp-action="Index" method="get" class="row g-3">
             <div class="col-auto">
                <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="Tên sản phẩm..." />
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-secondary">Tìm</button>
            </div>
        </form>
    </div>
    <div class="card-body">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Sản phẩm</th>
                    <th>Số lượng tồn</th>
                    <th>Cập nhật lần cuối</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Product?.ProductName</td>
                        <td class="fw-bold text-success">@item.Quantity</td>
                        <td>@item.UpdatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.InventoryId" class="btn btn-sm btn-info text-white"><i class="fas fa-edit"></i></a>
                             <form asp-action="Delete" asp-route-id="@item.InventoryId" method="post" id="delete-form-@item.InventoryId" style="display:inline-block">
                                <button type="button" class="btn btn-sm btn-danger" onclick="confirmDelete(@item.InventoryId, 'kho hàng')"><i class="fas fa-trash"></i></button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
         <!-- Pagination -->
        <nav aria-label="Page navigation" class="mt-3">
            <ul class="pagination justify-content-center">
                <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                    <a class="page-link" asp-action="Index"
                       asp-route-pageNumber="@(Model.PageIndex - 1)"
                       asp-route-searchString="@ViewData["CurrentFilter"]">Trước</a>
                </li>
                <li class="page-item disabled"><span class="page-link">Trang @Model.PageIndex / @Model.TotalPages</span></li>
                <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                    <a class="page-link" asp-action="Index"
                       asp-route-pageNumber="@(Model.PageIndex + 1)"
                       asp-route-searchString="@ViewData["CurrentFilter"]">Sau</a>
                </li>
            </ul>
        </nav>
    </div>
</div>
