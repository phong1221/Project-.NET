@model StoreManagement.Data.Entities.Inventory
@{ ViewData["Title"] = "Điều chỉnh kho"; }

<h2>Điều chỉnh kho</h2>
<div class="card shadow">
    <div class="card-body">
        <form asp-action="Edit">
            <input type="hidden" asp-for="InventoryId" />
            <div class="mb-3">
                <label asp-for="ProductId" class="form-label">Sản phẩm</label>
                <select asp-for="ProductId" class="form-select" asp-items="ViewBag.ProductId"></select>
            </div>
             <div class="mb-3">
                <label asp-for="Quantity" class="form-label">Số lượng</label>
                <input asp-for="Quantity" type="number" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Lưu</button>
            <a asp-action="Index" class="btn btn-secondary">Hủy</a>
        </form>
    </div>
</div>
