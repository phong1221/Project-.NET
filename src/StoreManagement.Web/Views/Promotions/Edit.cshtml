@model StoreManagement.Data.Entities.Promotion
@{ ViewData["Title"] = "Sửa mã giảm giá"; }

<h2>Sửa mã giảm giá</h2>
<div class="card shadow">
    <div class="card-body">
        <form asp-action="Edit">
            <input type="hidden" asp-for="PromoId" />
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="PromoCode" class="form-label">Mã Code</label>
                    <input asp-for="PromoCode" class="form-control" />
                    <span asp-validation-for="PromoCode" class="text-danger"></span>
                </div>
                 <div class="col-md-6 mb-3">
                    <label asp-for="Status" class="form-label">Trạng thái</label>
                    <select asp-for="Status" class="form-select">
                        <option value="active">Active</option>
                        <option value="inactive">Inactive</option>
                    </select>
                </div>
            </div>
             <div class="mb-3">
                <label asp-for="Description" class="form-label">Mô tả</label>
                <input asp-for="Description" class="form-control" />
            </div>
             <div class="row">
                <div class="col-md-6 mb-3">
                     <label asp-for="DiscountType" class="form-label">Loại giảm</label>
                     <select asp-for="DiscountType" class="form-select">
                        <option value="percent">Phần trăm (%)</option>
                        <option value="fixed">Số tiền cố định</option>
                    </select>
                </div>
                 <div class="col-md-6 mb-3">
                     <label asp-for="DiscountValue" class="form-label">Giá trị giảm</label>
                    <input asp-for="DiscountValue" type="number" class="form-control" />
                </div>
            </div>
             <div class="row">
                <div class="col-md-6 mb-3">
                     <label asp-for="StartDate" class="form-label">Ngày bắt đầu</label>
                     <input asp-for="StartDate" type="date" class="form-control" />
                </div>
                 <div class="col-md-6 mb-3">
                     <label asp-for="EndDate" class="form-label">Ngày kết thúc</label>
                    <input asp-for="EndDate" type="date" class="form-control" />
                </div>
            </div>
            
            <button type="submit" class="btn btn-primary">Lưu</button>
            <a asp-action="Index" class="btn btn-secondary">Hủy</a>
        </form>
    </div>
</div>
