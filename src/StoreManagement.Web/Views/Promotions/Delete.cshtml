@model StoreManagement.Data.Entities.Promotion
@{ ViewData["Title"] = "Xóa mã giảm giá"; }

<h2>Xóa mã giảm giá</h2>
<div class="alert alert-danger">
    <h4>Bạn có chắc chắn muốn xóa mã giảm giá này?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Mã:</dt>
        <dd class="col-sm-9">@Model.PromoCode</dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="PromoId" />
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>
