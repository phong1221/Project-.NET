@model StoreManagement.Web.Helpers.PaginatedList<StoreManagement.Data.Entities.Promotion>
@{ ViewData["Title"] = "Khuyến mãi"; }

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0 text-gray-800">Quản lý Khuyến mãi</h1>
    <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> Thêm mới</a>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <form asp-action="Index" method="get" class="row g-3">
             <div class="col-auto">
                <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="Mã KM..." />
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-secondary">Tìm</button>
            </div>
        </form>
    </div>
    <div class="card-body">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Mã</th>
                    <th>Loại</th>
                    <th>Giá trị</th>
                    <th>Ngày BĐ</th>
                    <th>Ngày KT</th>
                    <th>Trạng thái</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="fw-bold text-primary">@item.PromoCode</td>
                        <td>@item.DiscountType</td>
                        <td>@item.DiscountValue</td>
                        <td>@item.StartDate.ToString("dd/MM/yyyy")</td>
                        <td>@item.EndDate.ToString("dd/MM/yyyy")</td>
                        <td>
                             @if(item.Status == "active") {
                                <span class="badge bg-success">Active</span>
                            } else {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.PromoId" class="btn btn-sm btn-info text-white"><i class="fas fa-edit"></i></a>
                            <a asp-action="Delete" asp-route-id="@item.PromoId" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
         <!-- Pagination -->
        <nav aria-label="Page navigation" class="mt-3">
            <ul class="pagination justify-content-center">
                <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                    <a class="page-link" asp-action="Index"
                       asp-route-pageNumber="@(Model.PageIndex - 1)"
                       asp-route-searchString="@ViewData["CurrentFilter"]">Trước</a>
                </li>
                <li class="page-item disabled"><span class="page-link">Trang @Model.PageIndex / @Model.TotalPages</span></li>
                <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                    <a class="page-link" asp-action="Index"
                       asp-route-pageNumber="@(Model.PageIndex + 1)"
                       asp-route-searchString="@ViewData["CurrentFilter"]">Sau</a>
                </li>
            </ul>
        </nav>
    </div>
</div>
